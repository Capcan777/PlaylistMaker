<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NameTrackTextStyle">
        <item name="android:fontFamily">@font/yandex_sans_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ArtistTrackTextStyle" parent="NameTrackTextStyle">
        <item name="android:textSize">@dimen/size_11sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="MessageStyle">
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconPadding">@dimen/size_8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="cornerRadius">@dimen/size_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/dark_grey</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="ButtonRefresh">
        <item name="android:radius">54dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/dark_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">14dp</item>
    </style>

    <style name="IconBarStyle48">
        <item name="android:layout_marginVertical">@dimen/size_4dp</item>
        <item name="android:layout_marginStart">@dimen/size_4dp</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="TextStyleSettings" parent="NameTrackTextStyle">
        <item name="android:layout_marginVertical">@dimen/size_21dp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="SwitcherStyle" parent="NameTrackTextStyle">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="backgroundTint">@color/searching_icon_color</item>
        <item name="colorControlActivated">@color/dark_blue</item>
        <item name="android:thumbTint">@color/grey</item>
        <item name="android:trackTint">@color/light_gray</item>

    </style>

    <style name="TextBarStyle">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_marginStart">@dimen/size_12dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SearchingHintStyle">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/size_16dp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextOfDataTracks">
        <item name="fontFamily">@font/yandex_sans_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dark_grey</item>

    </style>

    <style name="TextNameOfDataTracks" parent="TextOfDataTracks">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="nameTrack">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/dark_grey</item>

    </style>

    <style name="TextOfMediateca" parent="nameTrack">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:textSize">19sp</item>

    </style>

    <style name="TextEmptyPlaylist" parent="TextOfMediateca">
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="fontWeight">500</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="BottomNavText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="backgroundTint">@color/backgroundColor</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/yandex_sans_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineHeight">56sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavText</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>


</resources>