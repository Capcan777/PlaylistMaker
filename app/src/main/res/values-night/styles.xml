<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconPadding">@dimen/size_8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="cornerRadius">@dimen/size_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/dark_grey</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TextStyleSettings" parent="NameTrackTextStyle">
        <item name="android:layout_marginVertical">@dimen/size_21dp</item>
    </style>


    <style name="TextBarStyle">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_marginStart">@dimen/size_12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ButtonRefresh">
        <item name="android:radius">54dp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">14dp</item>
    </style>

    <style name="MessageStyle">
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SearchingHintStyle">
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textSize">@dimen/size_16dp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="NameTrackTextStyle">
        <item name="android:fontFamily">@font/yandex_sans_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ArtistTrackTextStyle" parent="NameTrackTextStyle">
        <item name="android:textSize">@dimen/size_11sp</item>
    </style>

</resources>