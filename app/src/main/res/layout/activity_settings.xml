<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            style="@style/IconBarStyle48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/back"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/icon_arrow_back" />


        <TextView
            style="@style/TextBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings" />

    </LinearLayout>


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/theme_switcher"
        android:theme="@style/SwitcherStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24dp"
        android:foreground="?attr/selectableItemBackground"
        android:paddingVertical="@dimen/size_21dp"
        android:paddingStart="@dimen/size_16dp"
        android:paddingEnd="@dimen/size_8dp"
        android:text="@string/set_dark_theme"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <LinearLayout
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/size_16dp">

        <TextView
            android:id="@+id/textViewShare"
            style="@style/TextStyleSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/size_21dp"
            android:layout_weight="1"
            android:text="@string/share_app" />

        <ImageView
            android:id="@+id/imageViewShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/size_21dp"
            android:layout_weight="0"
            android:contentDescription="@string/wright_to_support"
            android:src="@drawable/icon_share" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingStart="@dimen/size_16dp"
        android:paddingEnd="@dimen/size_14dp">

        <TextView
            android:id="@+id/textViewSupport"
            style="@style/TextStyleSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/size_21dp"
            android:layout_weight="1"
            android:text="@string/wright_to_support" />

        <ImageView
            android:id="@+id/imageViewSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/size_21dp"
            android:layout_weight="0"
            android:contentDescription="@null"
            android:src="@drawable/icon_support" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/userAgreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingStart="@dimen/size_16dp"
        android:paddingEnd="@dimen/size_20dp">

        <TextView
            android:id="@+id/textViewUserAgreement"
            style="@style/TextStyleSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/size_21dp"
            android:layout_weight="1"
            android:text="@string/user_agreement" />

        <ImageView
            android:id="@+id/imageViewUserAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            android:layout_weight="0"
            android:contentDescription="@null"
            android:src="@drawable/icon_arrow_forward" />


    </LinearLayout>


</LinearLayout>



