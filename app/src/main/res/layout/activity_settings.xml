<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="0"
            android:contentDescription="@string/back"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/icon_arrow_back_light" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/yandex_sans_display_bold"
            android:letterSpacing="0"
            android:paddingStart="@dimen/padding_12dp"
            android:text="@string/settings"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/primary_text_size" />

    </LinearLayout>


    <Switch
        android:id="@+id/switcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:checked="false"
        android:clickable="true"
        android:fontFamily="@font/yandex_sans_display_regular"
        android:paddingVertical="21dp"
        android:paddingStart="@dimen/padding_16dp"
        android:paddingEnd="8dp"
        android:text="@string/set_dark_theme"
        android:textColor="@color/text_color_settings"
        android:textSize="@dimen/secondary_text_size"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_16dp"
        >

        <TextView
            android:id="@+id/textViewShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_21dp"
            android:layout_weight="1"
            android:fontFamily="@font/yandex_sans_display_regular"
            android:text="@string/share_app"
            android:textColor="@color/text_color_settings"
            android:textSize="@dimen/secondary_text_size" />

        <ImageView
            android:id="@+id/imageViewShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_21dp"
            android:layout_weight="0"
            android:contentDescription="@string/wright_to_support"
            android:src="@drawable/icon_share" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_16dp"
        android:paddingEnd="14dp">

        <TextView
            android:id="@+id/textViewSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_21dp"
            android:layout_weight="1"
            android:fontFamily="@font/yandex_sans_display_regular"
            android:text="@string/wright_to_support"
            android:textColor="@color/text_color_settings"
            android:textSize="@dimen/secondary_text_size" />

        <ImageView
            android:id="@+id/imageViewSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_21dp"
            android:layout_weight="0"
            android:contentDescription="@null"
            android:src="@drawable/icon_support" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_16dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/textViewUserAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_21dp"
            android:layout_weight="1"
            android:fontFamily="@font/yandex_sans_display_regular"
            android:text="@string/user_agreement"
            android:textColor="@color/text_color_settings"
            android:textSize="@dimen/secondary_text_size" />

        <ImageView
            android:id="@+id/imageViewUserAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            android:layout_weight="0"
            android:contentDescription="@null"
            android:src="@drawable/icon_arrow_forward" />


    </LinearLayout>


</LinearLayout>



